<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/contentPage"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"
                android:background="@color/colorPrimary"
                app:title="MoviePedia"
                app:titleTextColor="#fff"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/decribe"
                android:textColor="#000"
                android:padding="6dp"
                android:layout_margin="10dp"
                android:text="Popular Movies"
                android:textStyle="bold"
               app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/see"
                android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                android:padding="6dp"
                android:layout_margin="5dp"
                android:text="See More"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
               app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/popularRecycler"
                app:layout_constraintTop_toBottomOf="@+id/decribe" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/decribe1"
                android:textColor="#000"
                android:padding="6dp"
                android:layout_margin="10dp"
                android:text="Top Rated Movies"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/popularRecycler"
                app:layout_constraintLeft_toLeftOf="parent"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/see1"
                android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                android:padding="6dp"
                android:layout_margin="5dp"
                android:text="See More"
                app:layout_constraintTop_toBottomOf="@+id/popularRecycler"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/popular_movies_layout"
                android:id="@+id/TopRatedRecycler"
                app:layout_constraintTop_toBottomOf="@+id/decribe1" />






        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/errorpage"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            app:lottie_loop="true"
            android:id="@+id/lotti"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/littlegirljumping"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center"
            android:id="@+id/errorDetail"
            android:textColor="#000"
            android:background="@drawable/genre_bg"
            android:textStyle="italic"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:hint="Can't Reach For Movies" />



    </LinearLayout>




</LinearLayout>