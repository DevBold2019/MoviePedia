<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_gravity="center"
    android:layout_height="500dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cancel"
                android:layout_gravity="end"
                android:id="@+id/closeImage"
                android:layout_margin="10dp"
                android:scaleType="fitXY"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@color/colorAccent"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:id="@+id/DetailPic"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:padding="6dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/Titles"
                android:text="Ass Lover"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_margin="5dp"
                android:id="@+id/Description"
                android:text="This movie was acted in the 1990's its a story about a guy who loved asses until he turned into one"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="14sp"
                    android:padding="6dp"
                    android:text="Language :\t"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="14sp"
                    android:padding="6dp"
                    android:id="@+id/Language"
                    android:text="English"/>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="14sp"
                android:textStyle="italic"
                android:id="@+id/Time"
                android:padding="6dp"
                android:text="1 hr 40 minutes"/>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:id="@+id/share"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_share_black_24dp"
                    android:textSize="14sp"
                    android:padding="6dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:id="@+id/unliked"
                    app:layout_constraintTop_toTopOf="parent"

                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:layout_gravity="end"
                    android:textSize="14sp"
                    android:padding="6dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/liked"
                    android:visibility="invisible"
                    android:src="@drawable/ic_favorite_black"
                    android:layout_gravity="end"
                    android:textSize="14sp"
                    android:padding="6dp" />



            </androidx.constraintlayout.widget.ConstraintLayout>






        </LinearLayout>
    </ScrollView>










</LinearLayout>